<UserControl x:Class="MyUserControlsLib.Equlizer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MyUserControlsLib"
             mc:Ignorable="d" Height="199.466" Width="93.093">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="6*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <ProgressBar Name="progVal1" Grid.Column="0" Grid.Row="0" Minimum="0" Maximum="10" MouseDown="ProgMouseClick"></ProgressBar>
        <ProgressBar Name="progVal2" Grid.Column="1" Grid.Row="0" Minimum="0" Maximum="10" MouseDown="ProgMouseClick"></ProgressBar>
        <ProgressBar Name="progVal3" Grid.Column="2" Grid.Row="0" Minimum="0" Maximum="10" MouseDown="ProgMouseClick"></ProgressBar>

        <Label Name="lblVal1" Content="0" Grid.Column="0" Grid.Row="1" Foreground="Black" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"></Label>
        <Label Name="lblVal2" Content="0" Grid.Column="1" Grid.Row="1" Foreground="Black" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"></Label>
        <Label Name="lblVal3" Content="0" Grid.Column="2" Grid.Row="1" Foreground="Black" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"></Label>

    </Grid>

</UserControl>
